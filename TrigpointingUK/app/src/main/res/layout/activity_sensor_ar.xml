<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ar.SensorARActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Camera preview as background -->
        <uk.trigpointing.android.ar.CameraPreview
            android:id="@+id/camera_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- AR overlay for trigpoint icons -->
        <uk.trigpointing.android.ar.AROverlayView
            android:id="@+id/ar_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true" />

        <!-- Status overlay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="#80000000"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Compass directions row -->
            <TextView
                android:id="@+id/tvCompassDirections"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N    NNE    NE    ENE    E    ESE    SE    SSE    S    SSW    SW    WSW    W    WNW    NW    NNW"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:gravity="center"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/tvTrigpointCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading trigpoints..."
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
