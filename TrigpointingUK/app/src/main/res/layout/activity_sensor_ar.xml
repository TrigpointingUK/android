<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ar.SensorARActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Camera preview as background -->
        <uk.trigpointing.android.ar.CameraPreview
            android:id="@+id/camera_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- AR overlay for trigpoint icons -->
        <uk.trigpointing.android.ar.AROverlayView
            android:id="@+id/ar_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true" />

        <!-- Simple calibration controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="#66000000"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/ar_narrower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Narrower" />

            <View
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/ar_wider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wider" />
        </LinearLayout>


    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
