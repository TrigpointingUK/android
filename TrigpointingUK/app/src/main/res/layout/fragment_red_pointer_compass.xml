<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/compass_arrow"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@android:drawable/arrow_up_float"
        android:contentDescription="Direction arrow"
        android:tint="@android:color/holo_red_light" />

    <TextView
        android:id="@+id/compass_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="32dp"
        android:text="0.0 m"
        android:shadowColor="@android:color/holo_red_dark"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4" />

    <TextView
        android:id="@+id/compass_accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@android:color/holo_red_light"
        android:textSize="16sp"
        android:text="±0 m" />

    <TextView
        android:id="@+id/compass_bearing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="Bearing: 000°"
        android:shadowColor="@android:color/holo_red_dark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2" />

    <TextView
        android:id="@+id/compass_calibration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="14sp"
        android:text="Move device in figure-8 to calibrate compass"
        android:visibility="gone"
        android:textAlignment="center" />

</LinearLayout>
