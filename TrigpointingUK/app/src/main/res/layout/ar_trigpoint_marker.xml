<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="40dp">

    <!-- Trigpoint icon -->
    <ImageView
        android:id="@+id/trigpoint_icon"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:src="@drawable/t_pillar"
        android:scaleType="fitCenter" />

    <!-- Trigpoint name with background for readability -->
    <TextView
        android:id="@+id/trigpoint_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trigpoint Name"
        android:textColor="@android:color/white"
        android:textSize="120sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="center"
        android:background="#80000000"
        android:padding="20dp"
        android:layout_marginTop="20dp" />

    <!-- Distance with background for readability -->
    <TextView
        android:id="@+id/trigpoint_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0m"
        android:textColor="@android:color/white"
        android:textSize="100sp"
        android:gravity="center"
        android:background="#80000000"
        android:padding="20dp"
        android:layout_marginTop="10dp" />

</LinearLayout>
