<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="40dp">

    <!-- Trigpoint icon -->
    <ImageView
        android:id="@+id/trigpoint_icon"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:src="@drawable/t_pillar"
        android:scaleType="fitCenter" />

    <!-- Trigpoint name with background for readability -->
    <TextView
        android:id="@+id/trigpoint_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trigpoint Name"
        android:textColor="@android:color/white"
        android:textSize="80sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="none"
        android:gravity="center"
        android:background="#CC000000"
        android:padding="15dp"
        android:layout_marginTop="15dp"
        android:minWidth="0dp"
        android:maxWidth="2000dp" />

    <!-- Distance with background for readability -->
    <TextView
        android:id="@+id/trigpoint_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0m"
        android:textColor="@android:color/white"
        android:textSize="60sp"
        android:gravity="center"
        android:background="#CC000000"
        android:padding="10dp"
        android:layout_marginTop="8dp" />

</LinearLayout>
