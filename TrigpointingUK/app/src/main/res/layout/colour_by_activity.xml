<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose how to colour trig points:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <RadioGroup
        android:id="@+id/colourRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/byCondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By Condition"
            android:padding="12dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/byLogged"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By Logged Status"
            android:padding="12dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="None (Default)"
            android:padding="12dp"
            android:textSize="16sp" />

    </RadioGroup>

</LinearLayout> 