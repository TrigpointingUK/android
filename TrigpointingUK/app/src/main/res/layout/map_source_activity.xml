<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose map source:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <RadioGroup
        android:id="@+id/mapSourceRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/mapnik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mapnik (OpenStreetMap)"
            android:padding="12dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/mapquest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MapQuest"
            android:padding="12dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/cloudmade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CloudMade (May not work)"
            android:padding="12dp"
            android:textSize="16sp"
            android:enabled="false"
            android:textColor="@android:color/darker_gray" />

        <RadioButton
            android:id="@+id/cyclemap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CycleMap (May not work)"
            android:padding="12dp"
            android:textSize="16sp"
            android:enabled="false"
            android:textColor="@android:color/darker_gray" />

        <!-- Note: USGS and Public Transport may require API keys or may not be available -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Additional Sources (May require API keys)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

        <RadioButton
            android:id="@+id/usgs_sat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USGS Satellite (May not work)"
            android:padding="12dp"
            android:textSize="16sp"
            android:enabled="false"
            android:textColor="@android:color/darker_gray" />

        <RadioButton
            android:id="@+id/usgs_topo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USGS Topographic"
            android:padding="12dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/public_transport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Public Transport (May not work)"
            android:padding="12dp"
            android:textSize="16sp"
            android:enabled="false"
            android:textColor="@android:color/darker_gray" />

        <!-- Disabled Bing options -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bing Maps (Unavailable)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

        <RadioButton
            android:id="@+id/bingaerial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bing Aerial (Disabled)"
            android:padding="12dp"
            android:textSize="16sp"
            android:enabled="false"
            android:textColor="@android:color/darker_gray" />

        <RadioButton
            android:id="@+id/bingaeriallabels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bing Aerial with Labels (Disabled)"
            android:padding="12dp"
            android:textSize="16sp"
            android:enabled="false"
            android:textColor="@android:color/darker_gray" />

        <RadioButton
            android:id="@+id/bingroad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bing Road (Disabled)"
            android:padding="12dp"
            android:textSize="16sp"
            android:enabled="false"
            android:textColor="@android:color/darker_gray" />

        <RadioButton
            android:id="@+id/bingosgb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bing OSGB (Disabled)"
            android:padding="12dp"
            android:textSize="16sp"
            android:enabled="false"
            android:textColor="@android:color/darker_gray" />

    </RadioGroup>

</LinearLayout> 