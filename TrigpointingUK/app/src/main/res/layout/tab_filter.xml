<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <RadioGroup
        android:id="@+id/filterRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioFilterAll"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Show All"
            android:textSize="16sp"
            android:paddingStart="8dp" />

        <RadioButton
            android:id="@+id/radioFilterPillars"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Pillars Only"
            android:textSize="16sp"
            android:paddingStart="8dp" />

        <RadioButton
            android:id="@+id/radioFilterFBM"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Flush Bracket Marks Only"
            android:textSize="16sp"
            android:paddingStart="8dp" />

        <RadioButton
            android:id="@+id/radioFilterPassive"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Passive Stations Only"
            android:textSize="16sp"
            android:paddingStart="8dp" />

        <RadioButton
            android:id="@+id/radioFilterIntersected"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Intersected Stations Only"
            android:textSize="16sp"
            android:paddingStart="8dp" />

    </RadioGroup>
</ScrollView>
