<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <ImageView
        android:id="@+id/radar_arrow"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@android:drawable/arrow_up_float"
        android:contentDescription="@string/direction_arrow" />

    <TextView
        android:id="@+id/radar_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:text="@string/distance_zero" />

    <TextView
        android:id="@+id/radar_accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/distance_accuracy" />

    <TextView
        android:id="@+id/radar_bearing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/bearing_format" />

    <TextView
        android:id="@+id/radar_calibration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@android:color/holo_orange_dark"
        android:text="@string/compass_calibration"
        android:visibility="gone" />

</LinearLayout>

