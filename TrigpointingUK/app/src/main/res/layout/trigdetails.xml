<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Custom tab bar container -->
    <LinearLayout
        android:id="@+id/tab_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:layout_marginTop="16dp">

        <!-- Info tab button -->
        <ImageView
            android:id="@+id/tab_info"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_info_details"
            android:background="?android:attr/selectableItemBackground"
            android:padding="4dp"
            android:contentDescription="Info tab" />

        <!-- Logs tab button -->
        <ImageView
            android:id="@+id/tab_logs"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_agenda"
            android:background="?android:attr/selectableItemBackground"
            android:padding="4dp"
            android:contentDescription="Logs tab" />

        <!-- Album tab button -->
        <ImageView
            android:id="@+id/tab_album"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_gallery"
            android:background="?android:attr/selectableItemBackground"
            android:padding="4dp"
            android:contentDescription="Album tab" />

        <!-- Map tab button -->
        <ImageView
            android:id="@+id/tab_map"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_mapmode"
            android:background="?android:attr/selectableItemBackground"
            android:padding="4dp"
            android:contentDescription="Map tab" />

        <!-- My Log tab button -->
        <ImageView
            android:id="@+id/tab_mylog"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_edit"
            android:background="?android:attr/selectableItemBackground"
            android:padding="4dp"
            android:contentDescription="My Log tab" />

    </LinearLayout>

    <!-- Content area for tab content -->
    <FrameLayout
        android:id="@+id/tab_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white" />

</LinearLayout> 