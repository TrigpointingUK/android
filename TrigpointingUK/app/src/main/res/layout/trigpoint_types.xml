<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Trigpoint Types Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select trigpoint types to display:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <RadioGroup
            android:id="@+id/filterTypeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/radio_pillars_only"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pillars Only"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_pillars_fbm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pillars + FBM"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_fbm_only"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FBM Only"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_passive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Passive Stations"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_intersected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Intersected Stations"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_all_except_intersected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All except Intersected"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_all_types"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All Types"
                android:padding="8dp" />

        </RadioGroup>

        <!-- Logging Status Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter by logging status:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <RadioGroup
            android:id="@+id/filterStatusRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_status_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_status_logged"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logged"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_status_not_logged"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not Logged"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_status_marked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marked"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_status_unsynced"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unsynced"
                android:padding="8dp" />

        </RadioGroup>

    </LinearLayout>

</ScrollView>
