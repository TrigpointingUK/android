<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Trigpoint Types Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_trigpoint_types"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <RadioGroup
            android:id="@+id/filterTypeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/radio_pillars_only"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pillars_only"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_pillars_fbm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pillars_plus_fbm"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_fbm_only"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fbm_only"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_passive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/passive_stations"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_intersected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/intersected_stations"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_all_except_intersected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/all_except_intersected"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_all_types"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/all_types"
                android:padding="8dp" />

        </RadioGroup>

        <!-- Logging Status Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter_by_logging_status"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <RadioGroup
            android:id="@+id/filterStatusRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_status_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logged_or_not"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_status_logged"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/filterLogged"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_status_not_logged"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/filterNotLogged"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_status_marked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/filterMarked"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_status_unsynced"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/filterUnsynced"
                android:padding="8dp" />

        </RadioGroup>

    </LinearLayout>

</ScrollView>
