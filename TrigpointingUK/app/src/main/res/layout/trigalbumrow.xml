<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Photo icon -->
    <ImageView
        android:id="@+id/photoIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_menu_camera"
        android:padding="4dp"
        android:contentDescription="@string/photo_icon_content_desc" />

    <!-- Photo info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <!-- Photo name -->
        <TextView
            android:id="@+id/photoName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/photo_name_placeholder"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Date and user -->
        <TextView
            android:id="@+id/photoDateUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_by_user"
            android:textSize="12sp" />

        <!-- Description placeholder -->
        <TextView
            android:id="@+id/photoDescr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/photo_description_placeholder"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout> 