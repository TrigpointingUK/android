<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/photoThumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/photo_thumbnail_desc" />

    <EditText
        android:id="@+id/photoName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/photo_name_hint" />

    <EditText
        android:id="@+id/photoDescr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/photo_description_hint" />

    <Spinner
        android:id="@+id/photoSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/photoIsPublic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/public_photo" />

    <Button
        android:id="@+id/photoSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_photo" />

    <Button
        android:id="@+id/photoRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remove_photo" />

</LinearLayout> 