<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">

    <!-- User info section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_label"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/not_logged_in"
            android:textSize="16sp"
            android:textColor="@color/black" />

    </LinearLayout>

    <!-- Count section -->
    <LinearLayout
        android:id="@+id/count_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:elevation="2dp">

        <!-- Counts on the left -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Pillar count -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/countPillarImage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/t_pillar"
                    android:contentDescription="@string/pillar_icon_content_desc" />

                <TextView
                    android:id="@+id/countPillarText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/pillars_count" />

            </LinearLayout>

            <!-- FBM count -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/countFbmImage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/t_fbm"
                    android:contentDescription="@string/fbm_icon_content_desc" />

                <TextView
                    android:id="@+id/countFbmText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/fbm_count" />

            </LinearLayout>

            <!-- Passive count -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/countPassiveImage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/t_passive"
                    android:contentDescription="@string/passive_icon_content_desc" />

                <TextView
                    android:id="@+id/countPassiveText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/passive_count" />

            </LinearLayout>

            <!-- Intersected count -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/countIntersectedImage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/t_intersected"
                    android:contentDescription="@string/intersected_icon_content_desc" />

                <TextView
                    android:id="@+id/countIntersectedText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/intersected_count" />

            </LinearLayout>

            <!-- Unsynced count -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/countUnsyncedImage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_menu_refresh"
                    android:contentDescription="@string/unsynced_icon_content_desc" />

                <TextView
                    android:id="@+id/countUnsyncedText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/unsynced_count" />

            </LinearLayout>

            <!-- Photos count -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/countPhotosImage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_menu_camera"
                    android:contentDescription="@string/photos_icon_content_desc" />

                <TextView
                    android:id="@+id/countPhotosText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/photos_count" />

            </LinearLayout>

        </LinearLayout>

        <!-- User map on the right -->
        <ImageView
            android:id="@+id/userMapImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="16dp"
            android:scaleType="centerCrop"
            android:background="#f0f0f0"
            android:contentDescription="@string/user_activity_map"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Action buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="16dp">

        <!-- Top row: Nearest and Map buttons side by side -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnNearest"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="@string/nearest_button"
                android:textSize="16sp"
                android:layout_marginEnd="4dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorOnPrimary" />

            <Button
                android:id="@+id/btnLeafletMap"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="@string/map_button"
                android:textSize="16sp"
                android:layout_marginStart="4dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorOnPrimary" />

        </LinearLayout>

        <!-- AR View button - available to all users -->
        <Button
            android:id="@+id/btnARView"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:text="@string/arView"
            android:textSize="16sp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorOnPrimary" />

        <!-- Bottom row: Sync button -->
        <Button
            android:id="@+id/btnSync"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:text="@string/sync_button"
            android:textSize="16sp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorOnPrimary" />

    </LinearLayout>

</LinearLayout>
