<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/white"
    android:elevation="1dp"
    android:layout_margin="4dp">

    <!-- Trig condition (left side) -->
    <ImageView
        android:id="@+id/trigCondition"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/c_good"
        android:padding="2dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/trig_condition_icon_content_desc" />

    <!-- Trig type (left side) -->
    <ImageView
        android:id="@+id/trigType"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/t_pillar"
        android:padding="2dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/trig_type_icon_content_desc" />

    <!-- Trig name (center, takes remaining space) -->
    <TextView
        android:id="@+id/trigName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/trig_name_placeholder"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginEnd="8dp" />

    <!-- Right side group: distance, arrow, logged status -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- Trig distance -->
        <TextView
            android:id="@+id/trigDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/distance_format"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginEnd="4dp" />

        <!-- Trig arrow -->
        <ImageView
            android:id="@+id/trigArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_00_n"
            android:padding="2dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/trig_arrow_content_desc" />

        <!-- Trig logged status -->
        <ImageView
            android:id="@+id/trigLogged"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/c_good"
            android:padding="2dp"
            android:contentDescription="@string/trig_logged_status_content_desc" />

    </LinearLayout>

</LinearLayout> 