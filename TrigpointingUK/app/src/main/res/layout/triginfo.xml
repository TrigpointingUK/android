<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@color/white">

        <!-- Mark checkbox -->
        <CheckBox
            android:id="@+id/mark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mark_trigpoint"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:padding="8dp" />

        <!-- Trig info fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Waypoint -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/waypoint_label"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/triginfo_waypoint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/waypoint_placeholder" />

            </LinearLayout>

            <!-- Condition -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/condition_label_colon"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/triginfo_condition"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/condition_good" />

            </LinearLayout>

            <!-- Grid Reference -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/grid_ref_label"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/triginfo_gridref"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/grid_ref_placeholder" />

            </LinearLayout>

            <!-- WGS84 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/wgs84_label"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/triginfo_wgs84"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/coordinates_placeholder" />

            </LinearLayout>

            <!-- Current -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/current_label"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/triginfo_current"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/current_yes" />

            </LinearLayout>

            <!-- Historic -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/historic_label"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/triginfo_historic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/historic_no" />

            </LinearLayout>

            <!-- Type -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/type_label"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/triginfo_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/type_pillar" />

            </LinearLayout>

            <!-- Flush Bracket -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/flush_bracket_label"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/triginfo_fb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/flush_bracket_unknown" />

            </LinearLayout>

        </LinearLayout>

        <!-- View on map link -->
        <TextView
            android:id="@+id/triginfo_view_on_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_on_map"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- List nearby trigpoints link -->
        <TextView
            android:id="@+id/triginfo_list_nearby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_nearby_trigpoints"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</ScrollView> 