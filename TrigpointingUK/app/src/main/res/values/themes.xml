<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme - Modernized for proper content positioning -->
    <style name="Theme.TrigpointingUK" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@android:color/white</item>
        
        <!-- Action Bar Configuration -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="actionBarStyle">@style/Widget.TrigpointingUK.ActionBar</item>
        
        <!-- CRITICAL: This ensures content is positioned below the action bar -->
        <item name="windowActionBarOverlay">false</item>
        <item name="android:windowContentOverlay">@null</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Window flags for proper layout -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        
        <!-- Ensure proper content transitions -->
        <item name="android:windowContentTransitions">false</item>
        
        <!-- Material Design elevation -->
        <item name="elevationOverlayEnabled">false</item>
    </style>
    
    <!-- Custom Action Bar style to ensure proper height and positioning -->
    <style name="Widget.TrigpointingUK.ActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:background">@color/colorPrimary</item>
        <item name="background">@color/colorPrimary</item>
        <item name="elevation">4dp</item>
    </style>
    

</resources>
