<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.TrigpointingUK" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <!-- Ensure proper action bar positioning -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        
        <!-- Prevent content overlap with action bar -->
        <item name="android:windowContentOverlay">@null</item>
        
        <!-- Use proper content insets -->
        <item name="android:windowContentTransitions">false</item>
        
        <!-- Ensure proper status bar handling -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        
        <!-- Use modern window flags -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Fix for action bar content overlap -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:fitsSystemWindows">true</item>
        
        <!-- Ensure proper content insets -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
    
    <!-- Theme for activities that need a different appearance -->
    <style name="Theme.TrigpointingUK.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <!-- Ensure proper status bar handling -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>
</resources>
